<PropertyList>

	<path>Models/aoa-f8e.ac</path>
	<offsets>
		<roll-deg>-29.5</roll-deg>
	</offsets>
	<texture-path>Models/Textures</texture-path>



	<animation>
		<type>noshadow</type>
		<object-name>AOA</object-name>
	</animation>



	<model>
		<name>Bezel</name>
		<path>Aircraft/F-8E-Crusader/Instruments/Bezel_pt-f8e.xml</path>
		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
			<roll-deg>29.5</roll-deg>
		</offsets>
	</model>

	<model>
		<name>Bouton</name>
		<path>Aircraft/F-8E-Crusader/Instruments/Bouton_pt-f8e.xml</path>
		<offsets>
			<x-m>0.0161728</x-m>
			<y-m>-0.0126353</y-m>
			<z-m>-0.0393354</z-m>
			<roll-deg>29.5</roll-deg>
		</offsets>
	</model>

	<animation include="Instrument-Light4.xml">
		<object-name>Aiguille</object-name>
	</animation>

	<animation include="Instrument-Light3.xml">
		<object-name>Cadran</object-name>
		<object-name>Index</object-name>
	</animation>

	<animation>
		<type>select</type>
		<object-name>OFF</object-name>
		<condition>
				<less-than>
					<property>/systems/electrical/outputs/instr-ignition-switch</property>
					<value>27</value>
				</less-than>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Aiguille</object-name>
		<property>/orientation/alpha-deg</property>
		<interpolation>
			<entry>
				<ind>-100</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>-7</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>38</ind>
				<dep>270</dep>
			</entry>
		</interpolation>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

</PropertyList>
