	<animation>
		<type>select</type>
		<object-name>Temoin-Hook</object-name>
		<condition>
			<equals>
				<property>/gear/tailhook/position-norm</property>
				<value>1.0</value>
			</equals>
    		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>TemoinMHook</object-name>
		<condition>
			<and>
				<not-equals>
					<property>/gear/tailhook/position-norm</property>
					<value>0</value>
				</not-equals>
				<not-equals>
					<property>/gear/tailhook/position-norm</property>
					<value>1</value>
				</not-equals>
			</and>
		</condition>
	</animation>

