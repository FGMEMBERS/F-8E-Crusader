	<animation>
		<type>select</type>
		<object-name>Flag-HDG</object-name>
		<condition>
			<and>
				<equals>
					<property>instrumentation/nav[0]/in-range</property>
					<value>false</value>
				</equals>
			</and>
		</condition>
 	</animation>

	<animation>
		<type>select</type>
		<object-name>Flag-GS</object-name>
		<condition>
			<or>
				<equals>
					<property>instrumentation/nav[0]/in-range</property>
					<value>False</value>
				</equals>
				<equals>
					<property>instrumentation/nav[0]/has-gs</property>
					<value>false</value>
				</equals>
			</or>
		</condition>
 	</animation>

	<animation>
		<type>select</type>
		<object-name>IndicVert-nav</object-name>
		<condition>
			<and>
				<!--<equals>
					<property>instrumentation/nav[0]/has-gs</property>
					<value>true</value>
				</equals>-->
				<equals>
					<property>/instrumentation/heading-indicator/switch-tacan-acls</property>
					<value>1</value>
				</equals>
			</and>
		</condition>
 	</animation>

	<animation>
		<type>select</type>
		<object-name>IndicVert-tacan</object-name>
		<condition>
			<and>
				<!--<equals>
					<property>instrumentation/nav[0]/has-gs</property>
