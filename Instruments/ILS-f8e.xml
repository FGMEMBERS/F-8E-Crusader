<PropertyList>

 <path>Models/par-f8e.ac</path>
 <texture-path>Models/Textures</texture-path>

	<animation>
		<type>noshadow</type>
		<object-name>PAR</object-name>
	</animation>

	<model>
		<name>Bezel</name>
		<path>Aircraft/F-8E-Crusader/Instruments/Bezel-f8e.xml</path>
		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model>

	<model>
		<name>Bouton</name>
		<path>Aircraft/F-8E-Crusader/Instruments/Bouton-f8e.xml</path>
		<offsets>
			<x-m>0.0206361</x-m>
			<y-m>-0.039</y-m>
			<z-m>-0.039</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model>

	<model>
		<name>Bouton-D</name>
		<path>Aircraft/F-8E-Crusader/Instruments/Bouton-f8e.xml</path>
		<offsets>
			<x-m>0.0206361</x-m>
			<y-m>0.039</y-m>
			<z-m>-0.039</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model>
        
        <animation>
            <type>pick</type>
            <object-name>Bouton-D</object-name>
            <action>
                <button>0</button>
                <repeatable type="bool">true</repeatable>
                <binding>
                    <command>property-adjust</command>
                    <property>/instrumentation/heading-indicator/setting-manual-hdg</property>
                    <step>-1</step>
                    <min>0</min>
                    <max>360</max>
                    <wrap>1</wrap>
                </binding>
            </action>
        </animation>
        
        <animation>
            <type>pick</type>
            <object-name>Bouton-D</object-name>
            <action>
                <button>1</button>
                <repeatable type="bool">true</repeatable>
                <binding>
                    <command>property-adjust</command>
                    <property>/instrumentation/heading-indicator/setting-manual-hdg</property>
                    <step>1</step>
                    <min>0</min>
                    <max>360</max>
                    <wrap>1</wrap>
                </binding>
            </action>
        </animation>
        
        <animation>
            <type>pick</type>
            <object-name>Bouton</object-name>
            <action>
                <repeatable type="bool">true</repeatable>
                <button>0</button>
                <binding>
                    <command>property-adjust</command>
                    <property>/instrumentation/heading-indicator/nav-switch</property>
                    <step>1</step>
                    <min>0</min>
                    <max>3</max>
                    <wrap>1</wrap>
                </binding>
            </action>
        </animation>

	<animation include="Instrument-Light4.xml">
