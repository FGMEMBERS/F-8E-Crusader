	<animation>
		<type>rotate</type>
		<object-name>IndicTOFROM</object-name>
		<property>/instrumentation/heading-indicator/fromto-pointer</property>
		<center>
			<x-m>0</x-m>
			<y-m>0.0033789</y-m>
			<z-m>-0.0100522</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Bouton-D</object-name>
		<property>/instrumentation/heading-indicator/setting-manual-hdg</property>
		<factor>2</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0.039</y-m>
			<z-m>-0.039</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
