	</animation>



	<animation>
		<type>rotate</type>
		<object-name>Bouton</object-name>
		<property>/instrumentation/heading-indicator/nav-switch</property>
		<factor>60</factor>
		<center>
			<x-m>0</x-m>
			<y-m>-0.039</y-m>
			<z-m>-0.039</z-m>
		</center>
