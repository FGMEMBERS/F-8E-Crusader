				</equals>-->
				<equals>
					<property>/instrumentation/heading-indicator/switch-tacan-acls</property>
					<value>0</value>
				</equals>
			</and>
		</condition>
 	</animation>

	<animation>
		<type>select</type>
		<object-name>UCourse</object-name>
		<condition>
			<or>
				<not-equals>
					<property>/instrumentation/heading-indicator/nav-switch</property>
					<value>0</value>
				</not-equals>
				<equals>
					<property>/instrumentation/heading-indicator/switch-tacan-acls</property>
					<value>0</value>
				</equals>
			</or>
		</condition>
 	</animation>

	<animation>
		<type>select</type>
		<object-name>DCourse</object-name>
		<condition>
			<or>
				<not-equals>
					<property>/instrumentation/heading-indicator/nav-switch</property>
					<value>0</value>
				</not-equals>
				<equals>
					<property>/instrumentation/heading-indicator/switch-tacan-acls</property>
					<value>0</value>
				</equals>
			</or>
		</condition>
 	</animation>

	<animation>
		<type>select</type>
		<object-name>CCourse</object-name>
		<condition>
			<or>
				<not-equals>
					<property>/instrumentation/heading-indicator/nav-switch</property>
					<value>0</value>
				</not-equals>
				<equals>
					<property>/instrumentation/heading-indicator/switch-tacan-acls</property>
					<value>0</value>
				</equals>
			</or>
		</condition>
 	</animation>

	<animation>
		<type>select</type>
		<object-name>UCourse-Marker</object-name>
		<condition>
			<and>
				<equals>
					<property>/instrumentation/heading-indicator/switch-tacan-acls</property>
					<value>1</value>
				</equals>
				<equals>
					<property>/instrumentation/heading-indicator/nav-switch</property>
