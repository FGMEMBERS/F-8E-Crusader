		</condition>
 	</animation>



	<animation>
		<type>translate</type>
		<object-name>IndicHoriz</object-name>
		<property>instrumentation/nav[0]/gs-needle-deflection</property>
		<interpolation>
			<entry>
				<ind>-10</ind>
				<dep>-0.02</dep>
			</entry>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>10</ind>
				<dep>0.02</dep>
			</entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
 	</animation>

	<animation>
		<type>translate</type>
		<object-name>IndicVert-nav</object-name>
		<property>instrumentation/nav[0]/heading-needle-deflection</property>
		<interpolation>
			<entry>
				<ind>-10</ind>
				<dep>-0.02</dep>
			</entry>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>10</ind>
				<dep>0.02</dep>
			</entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

