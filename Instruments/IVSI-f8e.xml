<PropertyList>

 <path>Models/ivsi-f8e.ac</path>
 <texture-path>Models/Textures</texture-path>

 	<animation>
		<type>noshadow</type>
		<object-name>IVSI</object-name>
	</animation>



 	<model>
		<name>Bezel</name>
		<path>Aircraft/F-8E-Crusader/Instruments/Bezel_pt-f8e.xml</path>
		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model>

	<model>
		<name>Bouton</name>
		<path>Aircraft/F-8E-Crusader/Instruments/Bouton_pt-f8e.xml</path>
		<offsets>
			<x-m>0.0161728</x-m>
			<y-m>-0.0295</y-m>
			<z-m>-0.0295</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
	</model>

	<animation include="Instrument-Light4.xml">
		<object-name>Aiguille</object-name>
	</animation>

	<animation include="Instrument-Light3.xml">
		<object-name>Cadran</object-name>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Aiguille</object-name>
		<property>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
		<interpolation>
			<entry>
				<ind>-6000</ind>
				<dep>-165</dep>
			</entry>
			<entry>
				<ind>-5000</ind>
				<dep>-145</dep>
			</entry>
			<entry>
				<ind>-4000</ind>
				<dep>-125</dep>
			</entry>
			<entry>
				<ind>-3000</ind>
				<dep>-105</dep>
			</entry>
			<entry>
				<ind>-2000</ind>
				<dep>-80</dep>
			</entry>
			<entry>
				<ind>-1000</ind>
				<dep>-45</dep>
			</entry>
			<entry>
				<ind>-500</ind>
				<dep>-22.5</dep>
			</entry>
			<entry>
				<ind>500</ind>
				<dep>22.5</dep>
			</entry>
			<entry>
				<ind>1000</ind>
				<dep>45</dep>
			</entry>
			<entry>
				<ind>2000</ind>
				<dep>80</dep>
			</entry>
			<entry>
				<ind>3000</ind>
				<dep>105</dep>
			</entry>
			<entry>
				<ind>4000</ind>
				<dep>125</dep>
			</entry>
			<entry>
				<ind>5000</ind>
				<dep>145</dep>
			</entry>
			<entry>
				<ind>6000</ind>
				<dep>165</dep>
			</entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

</PropertyList>