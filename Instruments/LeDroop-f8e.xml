<PropertyList>

 <path>Models/Temoin-LeDroop.ac</path>
 <texture-path>Models/Textures</texture-path>

 	<animation>
		<type>noshadow</type>
		<object-name>LeDroop</object-name>
	</animation>

	<animation include="Instrument-Light4.xml">
		<object-name>Marquage</object-name>
	</animation>

	<!--<animation include="Instrument-Light3.xml">
		<object-name>Couronne</object-name>
	</animation>-->

	<animation>
		<type>select</type>
		<object-name>Temoin-LeDroop</object-name>
		<condition>
			<equals>
				<property><!--/surface-positions/leflap-pos-norm--></property>
				<value>1.0</value>
			</equals>
    		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>TemoinMLeDroop</object-name>
		<condition>
			<and>
				<greater-than>
					<property>/surface-positions/leflap-pos-norm</property>
					<value>0</value>
				</greater-than>
				<not-equals>
					<property>/surface-positions/wings-pos-norm</property>
					<value>1</value>
				</not-equals>
			</and>
		</condition>
	</animation>




</PropertyList>
