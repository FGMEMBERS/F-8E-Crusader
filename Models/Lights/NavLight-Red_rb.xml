<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>nav_light.ac</path>
  <nopreview/>

  <animation>
    <type>light</type>
    <light-type>spot</light-type>
    <name>Nav_Red-Light-side</name>
    <object-name>light-volume</object-name>
    <position>
      <x> 0 </x>
      <y>-0.20</y>
      <z> 0 </z>
    </position>
    <direction>
      <x> 0.0 </x>
      <y> -0.9</y>
      <z> -1.0 </z>
    </direction>
    <ambient>
      <r>  0.8 </r>
      <g>  0.0 </g>
      <b>  0.0 </b>
      <a>  1.0 </a>
    </ambient>
    <diffuse>
      <r>  1.0 </r>
      <g>  0.0 </g>
      <b>  0.0 </b>
      <a>  1.0 </a>
    </diffuse>
    <specular>
      <r>  0.5 </r>
      <g>  0.5 </g>
      <b>  0.5 </b>
      <a>  1.0 </a>
    </specular>
    <attenuation>
        <c>  0.030 </c>
        <l>  0.50 </l>
        <q>  0.50 </q>
    </attenuation>
    <exponent> 1.0   </exponent>
    <cutoff>   60.0   </cutoff>
    <near-m>    0.0   </near-m>
    <far-m>     5 </far-m>
    <dim-factor>
        <property>sim/model/f8e/nav-lights</property>
    </dim-factor>
  </animation>

  <animation>
      <type>select</type>
      <object-name>Nav_Red-Light-side</object-name>
      <condition>
          <greater-than>
              <property>systems/electrical/outputs/beacon</property>
              <value>27</value>
          </greater-than>
             <!--  <property>fdm/jsbsim/electrical/strobe-lights</property>-->
      </condition>
  </animation>



</PropertyList>
