	<!--****************************************************Landing Gear********************Train ****************************-->
        
        <animation>
            <type>pick</type>
            <object-name>LG-Cde</object-name>
            <action>
                <button>0</button>
                <binding>
                    <command>property-toggle</command>
                    <property>/controls/gear/gear-down</property>
                </binding>
            </action>
        </animation>

	<animation>
		<type>rotate</type>
		<object-name>LG-Cde</object-name>
		<property>/gear/gear[0]/position-norm</property>
		<factor>43</factor>
		<center>
			<x-m>-0.0599</x-m>
			<y-m>0</y-m>
			<z-m>-0.0418308</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<!--*************************************Hook********************Crosse *******************************************-->
        
        <animation>
            <type>pick</type>
            <object-name>Hook-Cde</object-name>
            <action>
                <button>0</button>
                <binding>
                    <command>property-toggle</command>
                    <property>controls/gear/tailhook</property>
                </binding>
            </action>
        </animation>

	<animation>
		<type>rotate</type>
		<object-name>Hook-Cde</object-name>
		<property>fdm/jsbsim/systems/hook/tailhook-pos-norm</property>
		<factor>53</factor>
		<center>
			<x-m>-0.05595</x-m>
			<y-m>0</y-m>
			<z-m>-0.0407491</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Temoin-Hook-Cde</object-name>
		<property>fdm/jsbsim/systems/hook/tailhook-pos-norm</property>
		<factor>53</factor>
		<center>
			<x-m>-0.05595</x-m>
			<y-m>0</y-m>
			<z-m>-0.0407491</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>select</type>
		<object-name>Temoin-Hook-Cde</object-name>
		<condition>
			<and>
				<not-equals>
					<property>fdm/jsbsim/systems/hook/tailhook-pos-norm</property>
					<value>0</value>
				</not-equals>
				<not-equals>
					<property>fdm/jsbsim/systems/hook/tailhook-pos-norm</property>
					<value>1</value>
				</not-equals>
			</and>
		</condition>
	</animation>





</PropertyList>