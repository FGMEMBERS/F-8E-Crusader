<PropertyList>

 <name>Panel Hotspots</name>
 <background>Aircraft/F-8E-Crusader/Panels/Textures/transparent-bg.rgb</background>
 <w>1024</w>
 <h>768</h>
 <y-offset>0</y-offset>


 <instruments>
	<instrument>
		<name>Control</name>
		<x>512</x>
		<y>384</y>
		<w>1024</w>
		<h>768</h>
		<w-base>1024</w-base>
		<h-base>1024</h-base>
		<layers>
			<layer>
				<name>background</name>
				<texture>
					<path>Aircraft/F-8E-Crusader/Panels/Textures/transparent-bg.rgb</path>
					<!-- <path>Aircraft/F-8E-Crusader/Panels/Textures/hotspotgrid.rgb</path> -->
				<x1>0.0</x1>
				<y1>0.0</y1>
				<x2>1.0</x2>
				<y2>1.0</y2>
				</texture>
			</layer>
		</layers>

		<actions>



<!--*********************************************Cde-Wings***************************************-->


			<action>
				<name>Commande incidence</name>
				<button>0</button>
				<x>-50</x>
				<y>-150</y>
				<w>150</w>
				<h>200</h>
				<binding>
					<command>property-toggle</command>
					<property>/controls/flight/wing-incidence</property>
				</binding>
                        </action>


<!--*********************************************Cde-Cutoff**************************************-->
			<action>
				<name>Commande Cutoff-Verrouillage</name>
				<button>0</button>
				<x>300</x>
				<y>-300</y>
				<w>100</w>
				<h>100</h>
				<binding>
					<command>nasal</command>
					<script>f8e.Cutoff_Cmd()</script>
				</binding>
                        </action>


<!--*********************************************Cde-LeDroop***************************************-->

			<action>
				<name>Commande LeDroop</name>
				<button>0</button>
				<x>148</x>
				<y>205</y>
				<w>20</w>
				<h>75</h>
				<binding>
                                    <command>property-assign</command>
                                    <property>/fdm/jsbsim/fcs/leflap-cmd-norm</property>
                                    <value>1.0</value>
				</binding>
                        </action>

			<action>
				<name>Commande LeDroop</name>
				<button>0</button>
				<x>140</x>
				<y>130</y>
				<w>20</w>
				<h>75</h>
				<binding>
                                    <command>property-assign</command>
                                    <property>/fdm/jsbsim/fcs/leflap-cmd-norm</property>
                                    <value>0.0</value>
				</binding>
                        </action>

<!--*********************************************Cde-CoPi***************************************-->

			<action>
				<name>module-G99</name>
				<button>0</button>
				<x>-450</x>
				<y>-200</y>
				<w>100</w>
				<h>400</h>
				<binding>
					<command>property-toggle</command>
					<property>/sim/cockpit/modules/switch-g99</property>
				</binding>
                        </action>



<!--*********************************************Throttle***************************************-->
			<action>
				<name>Throttle</name>
				<button>0</button>
				<x>125</x>
				<y>-350</y>
				<w>290</w>
				<h>50</h>
				<binding>
					<command>property-adjust</command>
					<property>/controls/engines/engine/throttle</property>
					<step>0.05</step>
				</binding>
                        </action>

			<action>
				<name>Throttle</name>
				<button>1</button>
				<x>125</x>
				<y>-350</y>
				<w>290</w>
				<h>50</h>
				<binding>
					<command>property-adjust</command>
					<property>/controls/engines/engine/throttle</property>
					<step>-0.05</step>
				</binding>
                        </action>




