                   </product>
                   <product>
                       <property>/sim/model/navaid/input/val-XXn-nn</property>
                       <value>10</value>
                   </product>
               </sum>
           </function>
           <output>/sim/model/navaid/input/val-XXX-XX</output>
        </fcs_function>
        
